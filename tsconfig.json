{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
		"es5", "es6", "es7", "es2017", "dom", "dom.iterable", "esnext"
    ],
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}
